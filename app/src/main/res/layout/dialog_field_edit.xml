<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextBox"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_input_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.68" />

    <ImageView
        android:id="@+id/viewCleanSearchBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clear"
        app:layout_constraintRight_toRightOf="@+id/editTextBox"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintTop_toTopOf="@+id/editTextBox"
        app:layout_constraintBottom_toBottomOf="@+id/editTextBox"
        app:layout_constraintVertical_bias="0.77" />

    <ImageView
        android:id="@+id/imageViewApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/approve"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewCleanSearchBox"
        app:layout_constraintTop_toTopOf="@+id/viewCleanSearchBox"
        app:layout_constraintVertical_bias="0.222"
        app:layout_constraintRight_toLeftOf="@+id/viewCleanSearchBox"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextBox"
        app:layout_constraintVertical_bias="0.8"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>